<?xml version="1.0" encoding="UTF-8"?>
<messages xmlns:if="Wt.WTemplate.conditions">

  <!-- AlertWidget -->

  <message id="Alert.alert.alert-form-title">Alerts</message>
  <message id="Alert.alert.alert-form-info"></message>

  <message id="Alert.alert.asset-label">Server</message>
  <message id="Alert.alert.asset-info">Choose your server</message>

  <message id="Alert.alert.application-label">Application</message>
  <message id="Alert.alert.application-info">Choose your application</message>

  <message id="Alert.alert.information-label">Information</message>
  <message id="Alert.alert.information-info">Choose your information</message>

  <message id="Alert.alert.threshold-operator-label">Operator</message>
  <message id="Alert.alert.threshold-operator-info">Choose your operator</message>

  <message id="threshold-value-label">Value</message>
  <message id="Alert.alert.threshold-value">Choose your value</message>

  <message id="Alert.alert.user-label">Recipient</message>
  <message id="Alert.alert.user-info">Choose an alert recipient</message>

  <message id="Alert.alert.media-label">Media</message>
  <message id="Alert.alert.media-info">Choose an alert media</message>

  <message id="Alert.alert.media-value-label">Registered media</message>
  <message id="Alert.alert.media-value-info">Choose an alert registered media</message>

  <message id="Alert.alert.snooze-label">Snooze</message>
  <message id="Alert.alert.snooze-info">Choose delay before the next alert</message>

  <message id="Alert.alert.edition.add-button">Add</message>
  <message id="Alert.alert.edition.delete-button">Delete</message>
  
  <message id="Alert.alert.NaN">Not a number</message>
  

  <!-- templates -->

  <message id="Alert.alert.Edition.template">
    <div class="Alert-form">
      <h2>${tr:Alert.alert.alert-form-title}</h2>
      <p>${tr:Alert.alert.alert-form-info}</p>
      
      <div class="Alert-fields Alert-sbox float-left">    
        <label for="${id:asset}">${tr:Alert.alert.asset-label}
           <span class="Alert-info">${tr:Alert.alert.asset-info}</span>
        </label>
        <br />
        ${server-sbox}
      </div>

      <div class="Alert-fields Alert-sbox float-left">
        <label for="${id:application}">${tr:Alert.alert.application-label}
           <span class="Alert-info">${tr:Alert.alert.application-info}</span>
        </label>
        <br />
        ${application-sbox}
      </div>
            
      <div class="Alert-fields Alert-sbox float-left">
        <label for="${id:information}">${tr:Alert.alert.information-label}
           <span class="Alert-info">${tr:Alert.alert.information-info}</span>
        </label>
        <br />
        ${information-sbox}
      </div>
            
      <div class="clear"></div>
      <hr />

      <div class="Alert-fields float-left">
        <label for="${id:threshold-operator}">${tr:Alert.alert.threshold-operator-label}
            <span class="Alert-info">${tr:Alert.alert.threshold-operator-info}</span>
        </label>
        ${threshold-operator}
      </div>
      
      <div class="Alert-fields float-left">
        ${<if:threshold-value>}
            <label for="${id:threshold-value}">${threshold-value-label}
              ${threshold-value-info class="Alert-info"}
            </label>
            ${threshold-value}
        ${</if:threshold-value>}   
      </div>
         
      <div class = "clear"></div>
      <hr />
            
      <div class="Alert-fields Alert-sbox float-left">
        <label>${tr:Alert.alert.user-label}
           <span class="Alert-info">${tr:Alert.alert.user-info}</span>
        </label>
        <br />
        ${user-sbox}
      </div>

      <div class="Alert-fields Alert-sbox float-left">
        <label>${tr:Alert.alert.media-label}
           <span class="Alert-info">${tr:Alert.alert.media-info}</span>
        </label>
        <br />
        ${media-sbox}
      </div>
            
      <div class="Alert-fields Alert-sbox float-left">
        <label>${tr:Alert.alert.media-value-label}
           <span class="Alert-info">${tr:Alert.alert.media-value-info}</span>
        </label>
        <br />
        ${media-value-sbox}
      </div>
            
      <div class="Alert-fields float-left">
        <label for="${id:snooze}">${tr:Alert.alert.snooze-label}
           <span class="Alert-info">${tr:Alert.alert.snooze-info}</span>
        </label>
        <div class = "clear"></div>
        ${snooze}
            
        <div class="Alert-buttons" style="float:right;">
          ${add-button-media}
        </div>
      </div>


      <div class="Alert-fields float-left">
        ${user-media-destination}
      </div>

      <div class="Alert-buttons">
        ${delete-button-media}
      </div>

      <hr />

      <div class="Alert-buttons">
        ${create-alert-button}
      </div>
            
    </div>

  </message>

</messages>
