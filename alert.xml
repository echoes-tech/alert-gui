<?xml version="1.0" encoding="UTF-8"?>
<messages xmlns:if="Wt.WTemplate.conditions">

  <!-- AlertWidget -->

  <message id="Alert.alert.alert-form-title">Alerts</message>
  <message id="Alert.alert.alert-form-info">This page gives you the possibility to create an alert</message>

  <message id="Alert.alert.asset-label">Server</message>
  <message id="Alert.alert.asset-info">Choose your server</message>

  <message id="Alert.alert.application-label">Application</message>
  <message id="Alert.alert.application-info">Choose your application</message>

  <message id="Alert.alert.information-label">Information</message>
  <message id="Alert.alert.information-info">Choose your information</message>

  <message id="Alert.alert.threshold-operator-label">Operator</message>
  <message id="Alert.alert.threshold-operator-info">Choose your operator</message>

  <message id="Alert.alert.threshold-value-label">Value</message>
  <message id="Alert.alert.threshold-value-info">Choose your value</message>

  <message id="Alert.alert.user-label">Recipient</message>
  <message id="Alert.alert.user-info">Choose an alert recipient</message>

  <message id="Alert.alert.media-label">Media</message>
  <message id="Alert.alert.media-info">Choose an alert media</message>

  <message id="Alert.alert.media-value-label">Registered media</message>
  <message id="Alert.alert.media-value-info">Choose an alert registered media</message>

  <message id="Alert.alert.snooze-label">Snooze</message>
  <message id="Alert.alert.snooze-info">Choose delay between two alerts</message>

  <message id="Alert.alert.add-media-button">Add to the list</message>
  <message id="Alert.alert.delete-media-button">Delete from the list</message>

  <message id="Alert.alert.edition.add-button">Add this alert</message>
  <message id="Alert.alert.edition.delete-button">Delete</message>
  
  <message id="Alert.alert.NaN"><span style="color:red">Not a number</span></message>
  <message id="Alert.alert.snooze-too-small"><span style="color:red">Less than 60</span></message>
  <message id="Alert.alert.string-tooshort"><span style="color:red">Must not be empty</span></message>
  <message id="Alert.alert.operator-empty"><span style="color:red">Must not be empty</span></message>
  
  
  <message id="Alert.alert.operator.lt">Less</message>
  <message id="Alert.alert.operator.le">Less or equal</message>
  <message id="Alert.alert.operator.eq">Equal</message>
  <message id="Alert.alert.operator.ne">Not equal</message>
  <message id="Alert.alert.operator.ge">Greater or equal</message>
  <message id="Alert.alert.operator.gt">Greater</message>
  
  <message id="Alert.alert.information-missing-title">Missing information</message>
  <message id="Alert.alert.information-missing">You didn't choose the information to be monitored</message>
  
  <message id="Alert.alert.media-missing-title">Missing media</message>
  <message id="Alert.alert.media-missing">
    You didn't choose a destination media. <br />
    You have to add a least one in the list.
  </message>
  
  <message id="Alert.alert.media-selection-missing-title">Missing media</message>
  <message id="Alert.alert.media-selection-missing">You didn't select the media to be added</message>
  
