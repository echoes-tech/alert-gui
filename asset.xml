<?xml version="1.0" encoding="UTF-8"?>
<messages xmlns:if="Wt.WTemplate.conditions">

  <!-- Models -->

  <message id="Alert.Probe.Download.os-label">Operating System</message>
  <message id="Alert.Probe.Download.os-info">Choose Server Operation System</message>

  <message id="Alert.Probe.Download.arch-label">Architecture</message>
  <message id="Alert.Probe.Download.arch-info">Choose Server Architecture</message>

  <message id="Alert.probe.download.send-mail">Send</message>

    <message id="disclaimer">
        <h3>Probe request</h3>
        
        <p>
            On this page you can choose the target Operating System and architecture of the server you want to monitor.
            <br></br>
            <br></br>
            When you push the button, it sends a request to our team. We will provide the probe as soon as possible after your request.<br></br>
            <br></br>
            The request can be sent only once. If there is no form under this text, it means that you already have sent your request.<br></br>
            <br></br>
            If you need more information, please come to our <a href="https://chat.echoes-tech.com" target="_blank">online chat</a>. 
            <br></br>
        </p>
    </message>

  <!-- templates -->

    <message id="Alert.Asset.Management.template">
        <div class="Probe-form">
            
            <h2>${tr:Alert.asset.asset-form-title}</h2>
            <p>${tr:Alert.asset.asset-form-info}</p>
            <div class = "clear"></div>
       
            <div class="Probe-fields float-left">
                <label for="${id:asset-name}">${tr:Alert.asset.asset-name-label}
                    <span class="Probe-info">${tr:Alert.asset.asset-name-info}</span>
                </label>
                ${asset-name}
            </div>

            <div class="Probe-buttons float-left">
                ${add-asset-button}
            </div>

        </div>   
         
        
        



    </message>


  

</messages>
