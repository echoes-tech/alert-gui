<?xml version="1.0" encoding="UTF-8"?>
<messages xmlns:if="Wt.WTemplate.conditions">


  <message id="Alert.option.ask-sms-button">Ask to renew the SMS quota</message>
  
  <message id="Alert.option.option-table-title">Options list</message>
  <message id="Alert.option.ask-sms-quota-body">Ask for SMS quota renewal.</message>
  <message id="Alert.option.ask-sms-quota-subject">>Ask for SMS quota</message>
  
  <message id="Alert.option.ask-sms-title">Sent</message>
  <message id="Alert.option.ask-sms">An e-mail was sent to our team. You will receive an e-mail when your quota will be renewed.</message>
  
  <message id="Alert.option.option-form-title">Options</message>
  <message id="Alert.option.option-form-info">In this page you can set the different options of your account.</message>
  
  <message id="Alert.option.sms-quota-label">SMS quota</message>
  <message id="Alert.option.sms-quota-info">The number of SMS remaining</message>
  
  <!-- templates -->

  <message id="Alert.Option.Management.template">
    <br />
    <div class ="alert alert-info">${tr:Alert.option.option-form-info}</div>
    
    
    <div class="row">
        <div class="col-lg-6">
            <div class="widget-box">
                <div class="widget-title">
                    <span class="icon">
                        <i class="glyphicon glyphicon-edit"></i>									
                    </span>
                    <h5>${tr:Alert.option.option-table-title}</h5>
                </div>
                <div class="widget-content">
                    <div class="control-group">
                        <!-- to disable the :first-child behaviour -->
                        <div class="row" style="display:none"></div>
                        <div class="row">
                            <div class="col-lg-2">
                                ${tr:Alert.option.sms-quota-label}
                                <i class="glyphicon glyphicon-question-sign" rel="tooltip" title="${tr:Alert.option.sms-quota-info}"></i>
                            </div>

                            <div class="col-lg-3">${sms-quota}</div>

                            <div class="col-lg-6">${sms-ask}</div>
                        </div>
                    </div>
                    <div class="control-group">
                        <div class="row">
                            <div class="col-lg-2">
                                ${tr:Alert.option.user-role-label}
                                <i class="glyphicon glyphicon-question-sign" rel="tooltip" title="${tr:Alert.option.user-role-info}"></i>
                            </div>

                            <div class="col-lg-3">${user-role-combo}</div>

                            <div class="col-lg-6">${user-role-button}</div>
                        </div>
                    </div>
                    
                     
                    
                </div>					
            </div>
        </div>
    </div>
    
  </message>

</messages>
