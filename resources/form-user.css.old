.User-form {
    margin: 0 auto;
    width: 40em;
    padding: 0.7em;
    float:left;
}

.User-form-left {
    margin-left: 6%;
    margin-right: 2%;
    width: 40%;
    min-width: 500px;
    float:left;
}

.User-form-right {
    margin-right: 6%;
    margin-left: 2%;
    width: 40%;
    min-width: 500px;
    float:left;
}

.User-form h2 {
    font-size: 130%;
    font-weight: bold;
    padding: 0px;
    margin: 8px 0px;
    letter-spacing: inherit;
    line-height: inherit;
    color: inherit;
    background: inherit;
    height: auto;
}

.User-form h3 {
    font-size: 100%;
    font-weight: bold;
    margin: 8px 0px;
}

.User-form p {
    font-size: 85%;
    color: #666666;
    margin-bottom: 1.5em;
    border-bottom: solid 1px #b7ddf2;
    float:left;
    padding-bottom: 0.5em;
}

.User-form label {
    display: block;
    font-weight: bold;
    text-align: right;
    width: 14em;
    float: left;
    clear: left;
    line-height: 110%;
}

.User-form .User-info {
    color: #666666;
    display: block;
    font-size: 85%;
    width: 16.47em;
    font-weight: normal;
    text-align: right;
}

.User-form .User-fields input {
    float: left;
    padding: 5px 2px;
    border: solid 1px #aacfe4;
    font-size: 90%;
    width: 14em;
    margin: 0.5em 0.5em 1.4em 0.7em;
}

.User-form .User-fields input[type="checkbox"] {
    margin-top: 1em;
    width: auto;
}

.User-form .User-fields select {
    margin-top: 1em;
    width: 14em;
    float: left;
    margin: 0.5em 0.5em 1.4em 0.7em;
    padding: 5px 2px;
    font-size: 90%;
}

.User-form .User-field {
    float: left;
    padding: 5px 2px;
    width: 15em;
    margin: 0 0.5em 1.4em 0.7em;
}

.User-form .User-fields hr {
    margin-top: 1em;
    width: 100%;
    float: left;
    margin: 0.5em 0.5em 1.4em 0.7em;
   
}

.User-buttons {
    clear: both;
    text-align: center;
    margin: 0.5em 0;
}

hr {
    margin-top: 10px;
    margin-bottom: 20px;
    width: 100%;
    float: left;  
}

.User-form .User-buttons span {
    text-decoration: underline;
    cursor: pointer; cursor: hand;
}

.User-form .User-sbox {
    text-align: center;
    margin: auto 0;
}

.User-form .User-sbox select {
    margin-top: 10px;
    margin-bottom: 30px;
    width: 30em;
}

.User-form .User-error {
    color: black;
}

.User-form .User-col-right {
    margin-left: 29em;
    padding-left: 2em;
    border-left: solid 1px #b7ddf2;
}

.float-left {
    float: left;
}

.clear {
    clear: both;
}

