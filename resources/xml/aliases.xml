	<message id="Alert.aliases.aliases-info">In this page you can customize the alerts</message>
	<message id="Alert.admin.aliases-tab">Aliases</message>
    <message id="Alert.admin.plugin-select">Please select a plugin above</message>
    <message id="Alert.aliases.role-label">Role</message>
    <message id="Alert.aliases.media-label">Media</message>
    <message id="Alert.aliases.load">Load</message>
    <message id="Alert.aliases.title-choose">Choose role or related media</message>
    <message id="Alert.aliases.title-alias-asset">Aliases definition for assets</message>
    <message id="Alert.aliases.title-alias-information">Aliases definition for information and criterion</message>

	<message id="Alert.aliases.template">
	    <br />
	    <div class ="alert alert-info">${tr:Alert.aliases.aliases-info}</div>
	    
	    
        <div class="widget-box">
            <div class="widget-title">
                <span class="icon"><i class="icon-envelope"></i></span>
                <h5>${tr:Alert.aliases.title-choose}</h5>
            </div>
            <div class="widget-content">
                <div class="container-fluid">
                    <div class="row-fluid">
                        <span class="span2">${tr:Alert.aliases.role-label}</span> <span class="span3">${roles-combo-box}</span>
                    </div>
                    <div class="row-fluid">
                        <span class="span2">${tr:Alert.aliases.media-label}</span> <span class="span3">${medias-combo-box}</span>
                    </div>
                </div>
            </div>
        </div>
        
        <div class="widget-box">
            <div class="widget-title">
                <span class="icon"><i class="icon-pencil"></i></span>
                <h5>${tr:Alert.aliases.title-alias-asset}</h5>
            </div>
            <div class="widget-content">
                ${assets-container}
            </div>
        </div>
        
        <div class="widget-box">
            <div class="widget-title">
                <span class="icon"><i class="icon-pencil"></i></span>
                <h5>${tr:Alert.aliases.title-alias-information}</h5>
            </div>
            <div class="widget-content">
                <div class ="row-fluid">
                    <div class="span3">
                        ${plugins-combo-box}
                    </div>
                    <div class="span7 no-padding"></div>
                    <div class="span1">
                        ${plugins-load-button}
                    </div>
                </div>
                ${plugins-container}
                ${informations-container}
            </div>
        </div>
  
  	</message>
